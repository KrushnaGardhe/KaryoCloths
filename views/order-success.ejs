<% layout('layout') %>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
            </div>
            
            <h1 class="display-4 fw-bold text-success mb-3">Order Placed Successfully!</h1>
            <p class="lead mb-4">Thank you for your order! We're already preparing it for lightning-fast delivery.</p>
            
            
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Order Details</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Order ID:</strong> <span class="text-primary">#<%= orderId.toString().slice(-8).toUpperCase() %></span>
                        </div>
                        <div>
                            <span class="badge bg-success">Confirmed</span>
                        </div>
                    </div>
                </div>
            </div>

           
            <div class="card border-0 bg-light mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">What happens next?</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-box-seam text-primary display-6 mb-2"></i>
                            <h6>Order Processing</h6>
                            <small class="text-muted">We're picking and packing your items</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-truck text-warning display-6 mb-2"></i>
                            <h6>Out for Delivery</h6>
                            <small class="text-muted">Your order will be dispatched soon</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="bi bi-house-door text-success display-6 mb-2"></i>
                            <h6>Delivered</h6>
                            <small class="text-muted">Right to your doorstep</small>
                        </div>
                    </div>
                </div>
            </div>

           
            <div class="alert alert-info border-0 mb-4">
                <h6><i class="bi bi-clock"></i> Estimated Delivery Time</h6>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Same-day delivery cities:</strong><br>
                        <small>Mumbai, Delhi, Pune, Bangalore - Within 2-4 hours</small>
                    </div>
                    <div class="col-md-6">
                        <strong>Other cities:</strong><br>
                        <small>1-2 business days</small>
                    </div>
                </div>
            </div>

            
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Need Help?</h5>
                    <p class="text-muted mb-3">Our customer support team is here to help with any questions about your order.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="tel:7666702468" class="btn btn-outline-primary">
                            <i class="bi bi-telephone"></i> Call Support
                        </a>
                        <a href="mailto:gadgetsshopaffiliate@gmail.com" class="btn btn-outline-info">
                            <i class="bi bi-envelope"></i> Email Us
                        </a>
                    </div>
                </div>
            </div>

            
            <div class="d-flex justify-content-center gap-3 mb-4">
                <a href="/shop" class="btn btn-primary btn-lg">
                    <i class="bi bi-shop"></i> Continue Shopping
                </a>
                <a href="/" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-house"></i> Back to Home
                </a>
            </div>

           
            <div class="text-center">
                <small class="text-muted">
                    <i class="bi bi-people"></i> Join 10,000+ satisfied customers who trust Karyo for premium fashion
                </small>
            </div>
        </div>
    </div>
</div>


